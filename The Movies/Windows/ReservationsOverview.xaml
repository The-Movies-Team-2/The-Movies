<Window x:Class="The_Movies.Windows.ReservationOverviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Movies.Windows"
        mc:Ignorable="d"
        Title="Reservationsoversigt" Height="450" Width="800">
    <Grid>
        <ComboBox HorizontalAlignment="Left" Margin="171,63,0,0" VerticalAlignment="Top" Width="576" ItemsSource="{Binding  Showings}"/>
        <Label Content="Sorter efter forestilling" HorizontalAlignment="Left" Margin="37,62,0,0" VerticalAlignment="Top"/>

        <DataGrid ItemsSource="{Binding Reservations}" Margin="37,93,53,68">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <!--noget med hvilken film
                noget med hvornår
                noget med hvor-->
                <DataGridTextColumn Header="tlf" Binding="{Binding CustomerPhone}" Width="200" />
                <DataGridTextColumn Header="mail" Binding="{Binding CustomerMail}" Width="200"/>
                <DataGridTextColumn Header="antal" Binding="{Binding NumberOfTickets}" Width="60"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
